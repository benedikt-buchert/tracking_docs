{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/schemas/components/dataLayer.json",
    "title": "dataLayer",
    "description": "Schema for the object structure pushed to the dataLayer.",
    "type": "object",
    "propertyNames": {
        "maxLength": 40,
        "pattern": "^[a-zA-Z0-9_]+$"
    },
    "properties": {
        "event": {
            "type": "string",
            "description": "The name of the event."
        },
        "ecommerce": {
            "type": "object",
            "description": "Ecommerce related data.",
            "x-gtm-clear": true
        },
        "user_data": {
            "type": "object",
            "description": "User related data.",
            "x-gtm-clear": true
        }
    },
    "required": [
        "event"
    ]
}